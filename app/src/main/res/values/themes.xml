<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProfessionalButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Theme.Artham" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/app_font</item>

        <item name="chk_primary_blue">@color/primary_blue</item>
        <item name="chk_secondary_green">@color/secondary_green</item>
        <item name="colorPrimary">?attr/chk_primary_blue</item>
        <item name="colorSecondary">?attr/chk_secondary_green</item>
        <item name="colorPrimaryDark">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="chk_backgroundColor">@color/backgroundColor</item>
        <item name="chk_surfaceColor">@color/surfaceColor</item>
        <item name="chk_dividerHorizontal">@color/divider_color</item>
        <item name="chk_dividerVertical">@color/divider_color</item>
        <item name="android:colorBackground">?attr/chk_backgroundColor</item>
        <item name="colorSurface">?attr/chk_surfaceColor</item>

        <item name="chk_textColorPrimary">@color/textColorPrimary</item>
        <item name="chk_textColorSecondary">@color/textColorSecondary</item>
        <item name="chk_textColorHint">@color/textColorHint</item>
        <item name="android:textColorPrimary">?attr/chk_textColorPrimary</item>
        <item name="android:textColorSecondary">?attr/chk_textColorSecondary</item>
        <item name="android:textColorHint">?attr/chk_textColorHint</item>

        <item name="chk_incomeColor">@color/income_green</item>
        <item name="chk_expenseColor">@color/expense_red</item>
        <item name="chk_balanceColor">@color/balance_blue</item>

        <item name="chk_bottomNavIconTextColor">@color/bottom_nav_icon_text_color</item>
        <item name="chk_bottomNavSelectedColor">@color/bottom_nav_selected</item>
        <item name="chk_bottomNavBorderColor">@color/bottom_nav_item_unselected_border</item>

        <item name="android:statusBarColor">?attr/chk_backgroundColor</item>
        <item name="android:windowLightStatusBar">@bool/is_light_status_bar</item>

        <item name="buttonStyle">@style/ProfessionalButton</item>
    </style>

    <style name="Theme.Artham.Dialog" parent="Theme.Artham">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

</resources>