<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProfessionalButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Theme.Artham" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary_dark</item>
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="android:statusBarColor">@color/light_background</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="chk_backgroundColor">@color/light_background</item>
        <item name="chk_surfaceColor">@color/light_surface</item>
        <item name="chk_dividerHorizontal">@color/light_divider</item>
        <item name="chk_dividerVertical">@color/light_divider</item>
        <item name="chk_selectedItemColor">@color/light_selected_item</item>
        <item name="chk_textColorPrimary">@color/light_text_primary</item>
        <item name="chk_textColorSecondary">@color/light_text_secondary</item>
        <item name="chk_textColorHint">@color/light_text_hint</item>
        <item name="android:textColorPrimary">@color/light_text_primary</item>
        <item name="android:textColorSecondary">@color/light_text_secondary</item>
        <item name="android:textColorHint">@color/light_text_hint</item>
        <item name="chk_primary_blue">@color/light_primary</item>
        <item name="chk_secondary_green">@color/light_secondary</item>
        <item name="chk_incomeColor">@color/income_green</item>
        <item name="chk_expenseColor">@color/expense_red</item>
        <item name="chk_balanceColor">@color/light_balance_blue</item>
        <item name="chk_bottomNavIconTextColor">@color/bottom_nav_icon_text_color</item>
        <item name="chk_bottomNavSelectedColor">@color/light_primary</item>
        <item name="chk_bottomNavBorderColor">@color/light_divider</item>
        <item name="chk_card_start">#001021</item>
        <item name="chk_card_end">#023E6B</item>
        <item name="buttonStyle">@style/ProfessionalButton</item>

        <item name="chk_splash_wave">@color/splash_wave_light</item>
    </style>

