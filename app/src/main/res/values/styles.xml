<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/chk_textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/chk_textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="SettingsItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="FilterRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/chk_textColorPrimary</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="BottomNavItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?attr/chk_bottomNavIconTextColor</item>
        <item name="android:drawableTint">?attr/chk_bottomNavIconTextColor</item>
    </style>

    <style name="CalcButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/chk_textColorPrimary</item>
        <item name="strokeColor">?attr/chk_dividerHorizontal</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="TransactionDetailRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="TransactionDetailIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:tint">?attr/chk_textColorSecondary</item>
    </style>

    <style name="TransactionDetailText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/chk_textColorPrimary</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="DetailRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="DetailIconStyle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:tint">?attr/chk_textColorSecondary</item>
    </style>

    <style name="DetailTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/chk_textColorPrimary</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="DetailLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/chk_textColorSecondary</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="DetailRowContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="DetailValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/chk_textColorPrimary</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="CircleImageView" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>