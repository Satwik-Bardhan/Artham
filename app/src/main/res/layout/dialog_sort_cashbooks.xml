<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="?attr/chk_surfaceColor"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/chk_headerColor"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/app_font"
                android:text="Sort Cashbooks"
                android:textColor="?attr/chk_textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                app:tint="?attr/chk_textColorPrimary"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>

        <!-- Options Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <!-- Option: Name A-Z -->
            <LinearLayout
                android:id="@+id/optNameAsc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:paddingVertical="14dp">

                <TextView
                    android:id="@+id/textNameAsc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/app_font"
                    android:text="Name (A to Z)"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/checkNameAsc"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check"
                    app:tint="?attr/chk_primary_blue"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Option: Name Z-A -->
            <LinearLayout
                android:id="@+id/optNameDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:paddingVertical="14dp">

                <TextView
                    android:id="@+id/textNameDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/app_font"
                    android:text="Name (Z to A)"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/checkNameDesc"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check"
                    app:tint="?attr/chk_primary_blue"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Option: Date Newest -->
            <LinearLayout
                android:id="@+id/optDateNewest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:paddingVertical="14dp">

                <TextView
                    android:id="@+id/textDateNewest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/app_font"
                    android:text="Date Created (Newest)"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/checkDateNewest"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check"
                    app:tint="?attr/chk_primary_blue"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Option: Date Oldest -->
            <LinearLayout
                android:id="@+id/optDateOldest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:paddingVertical="14dp">

                <TextView
                    android:id="@+id/textDateOldest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/app_font"
                    android:text="Date Created (Oldest)"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/checkDateOldest"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check"
                    app:tint="?attr/chk_primary_blue"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Option: Balance High -->
            <LinearLayout
                android:id="@+id/optBalanceHigh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:paddingVertical="14dp">

                <TextView
                    android:id="@+id/textBalanceHigh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/app_font"
                    android:text="Balance (High to Low)"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/checkBalanceHigh"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check"
                    app:tint="?attr/chk_primary_blue"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Option: Balance Low -->
            <LinearLayout
                android:id="@+id/optBalanceLow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:paddingVertical="14dp">

                <TextView
                    android:id="@+id/textBalanceLow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/app_font"
                    android:text="Balance (Low to High)"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/checkBalanceLow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check"
                    app:tint="?attr/chk_primary_blue"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>