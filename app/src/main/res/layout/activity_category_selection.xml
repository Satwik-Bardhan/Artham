<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_root_layout"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="?attr/chk_backgroundColor">

    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardBackgroundColor="?attr/chk_surfaceColor"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_left"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_centerVertical="true"
                app:tint="?attr/chk_textColorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Category"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/app_font"
                android:textColor="?attr/chk_textColorPrimary"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerCard"
        android:layout_marginBottom="80dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/noCategoryClickable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_background"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true">

                <RadioButton
                    android:id="@+id/radioNoCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:buttonTint="?attr/chk_primary_blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Category"
                    android:textSize="16sp"
                    android:fontFamily="@font/app_font"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Suggestions"
                android:textStyle="bold"
                android:fontFamily="@font/app_font"
                android:textColor="?attr/chk_textColorSecondary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/quickCategoryFood"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:background="@drawable/rounded_input_background"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textAllCaps="false"
                    android:fontFamily="@font/app_font"
                    app:backgroundTint="@null"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/quickCategoryTransport"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Transport"
                    android:background="@drawable/rounded_input_background"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textAllCaps="false"
                    android:fontFamily="@font/app_font"
                    app:backgroundTint="@null"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/quickCategoryShopping"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Shopping"
                    android:background="@drawable/rounded_input_background"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textAllCaps="false"
                    android:fontFamily="@font/app_font"
                    app:backgroundTint="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="All Categories"
                    android:fontFamily="@font/app_font"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/categoryCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/app_font"
                    android:textColor="?attr/chk_textColorSecondary"
                    android:text="0 items"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categoriesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/addNewCategoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:text="Create New"
        android:textColor="@android:color/white"
        android:fontFamily="@font/app_font"
        android:textStyle="bold"
        app:icon="@drawable/ic_add"
        app:iconTint="@android:color/white"
        app:backgroundTint="?attr/chk_primary_blue"/>

</RelativeLayout>