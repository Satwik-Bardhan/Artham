<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/balanceCardBack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <!-- Changed root to RelativeLayout for positioning -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/cash_card"
        android:padding="16dp">

        <!-- User Profile Section -->
        <LinearLayout
            android:id="@+id/profileSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#33FFFFFF">

                <ImageView
                    android:id="@+id/backProfileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person_placeholder"
                    android:scaleType="centerCrop"
                    app:tint="#FFFFFF"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/backUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/app_font"
                    android:text="User Name"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/app_font"
                    android:text="Artham Member"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_below="@id/profileSection"
            android:layout_marginBottom="16dp"/>

        <!-- Social Links Section (Centered) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/divider"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnYoutube"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/youtube"
                android:contentDescription="YouTube"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:layout_marginEnd="20dp"/>

            <ImageView
                android:id="@+id/btnInstagram"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/instagram"
                android:contentDescription="Instagram"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:layout_marginEnd="20dp"/>

            <!-- NEW: Facebook -->
            <ImageView
                android:id="@+id/btnFacebook"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/facebook"
                android:contentDescription="Facebook"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:layout_marginEnd="20dp"/>

            <ImageView
                android:id="@+id/btnWebsite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/website"
                android:contentDescription="Website"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:layout_marginEnd="20dp"/>

            <ImageView
                android:id="@+id/btnGmail"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_email"
                android:contentDescription="Gmail"
                android:clickable="true"
                android:focusable="true"
                app:tint="#FFFFFF"
                android:padding="4dp"/>
        </LinearLayout>

        <!-- Tap Hint at Bottom Right -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="Tap to flip"
            android:textColor="#999999"
            android:textSize="10sp"
            android:textStyle="italic" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>