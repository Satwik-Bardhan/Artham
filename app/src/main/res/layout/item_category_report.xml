<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:background="?attr/selectableItemBackground">

    <View
        android:id="@+id/categoryColorIndicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/shape_circle_solid"
        android:backgroundTint="?attr/chk_primary_blue"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="Food &amp; Dining"
        android:fontFamily="@font/app_font"
        android:textColor="?attr/chk_textColorPrimary"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/categoryAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="â‚¹2,450.00"
            android:fontFamily="@font/app_font"
            android:textColor="?attr/chk_textColorPrimary"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/categoryPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24.5%"
            android:fontFamily="@font/app_font"
            android:textColor="?attr/chk_textColorSecondary"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>