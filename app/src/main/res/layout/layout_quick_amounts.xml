<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <android.widget.Button
        android:id="@+id/quickAmount100"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_quick_amount_chip"
        android:text="₹100"
        android:fontFamily="@font/app_font"
        android:textColor="?attr/chk_primary_blue"
        android:textSize="13sp"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        app:backgroundTint="@null"
        android:textAllCaps="false"/>

    <android.widget.Button
        android:id="@+id/quickAmount500"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_quick_amount_chip"
        android:text="₹500"
        android:fontFamily="@font/app_font"
        android:textColor="?attr/chk_primary_blue"
        android:textSize="13sp"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        app:backgroundTint="@null"
        android:textAllCaps="false"/>

    <android.widget.Button
        android:id="@+id/quickAmount1000"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_quick_amount_chip"
        android:text="₹1K"
        android:fontFamily="@font/app_font"
        android:textColor="?attr/chk_primary_blue"
        android:textSize="13sp"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        app:backgroundTint="@null"
        android:textAllCaps="false"/>

    <android.widget.Button
        android:id="@+id/quickAmount5000"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/bg_quick_amount_chip"
        android:text="₹5K"
        android:fontFamily="@font/app_font"
        android:textColor="?attr/chk_primary_blue"
        android:textSize="13sp"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        app:backgroundTint="@null"
        android:textAllCaps="false"/>

</LinearLayout>