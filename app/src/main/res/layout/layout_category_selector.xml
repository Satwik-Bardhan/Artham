<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Category"
        android:fontFamily="@font/app_font"
        android:textColor="?attr/chk_textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/categorySelectorCard"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="?attr/chk_surfaceColor"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/chk_primary_blue"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/categorySelectorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/selectedCategoryIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_category"
                app:tint="?attr/chk_textColorPrimary"
                android:layout_marginEnd="16dp"
                android:contentDescription="Category Icon"/>

            <TextView
                android:id="@+id/selectedCategoryTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Select Category"
                android:fontFamily="@font/app_font"
                android:textColor="?attr/chk_textColorPrimary"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_expand_more"
                app:tint="?attr/chk_textColorSecondary"
                android:contentDescription="Expand" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>