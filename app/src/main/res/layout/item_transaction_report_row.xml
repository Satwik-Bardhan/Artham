<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:paddingHorizontal="8dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:minHeight="48dp">

    <TextView
        android:id="@+id/rowCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        tools:text="Groceries"
        android:fontFamily="@font/app_font"
        android:textColor="?attr/chk_textColorPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingStart="4dp"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/rowMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="Online"
        android:fontFamily="@font/app_font"
        android:textColor="?attr/chk_textColorSecondary"
        android:textSize="12sp"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/rowIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="₹0"
        android:fontFamily="@font/app_font"
        android:textColor="?attr/chk_incomeColor"
        android:textSize="13sp"
        android:textStyle="bold"
        android:gravity="end|center_vertical"
        android:paddingEnd="4dp"
        android:maxLines="1" />

    <TextView
        android:id="@+id/rowOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="₹1,200"
        android:fontFamily="@font/app_font"
        android:textColor="?attr/chk_expenseColor"
        android:textSize="13sp"
        android:textStyle="bold"
        android:gravity="end|center_vertical"
        android:paddingEnd="4dp"
        android:maxLines="1" />

</LinearLayout>