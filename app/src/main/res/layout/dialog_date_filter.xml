<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/chk_surfaceColor"
    android:paddingTop="20dp"
    android:clipToOutline="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_calendar"
            app:tint="?attr/chk_primary_blue"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Period"
            android:fontFamily="@font/app_font"
            android:textColor="?attr/chk_textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/chk_dividerHorizontal"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RadioGroup
            android:id="@+id/date_options_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_history"
                    app:tint="?attr/chk_textColorSecondary"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/radio_all_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="All Time"
                    android:fontFamily="@font/app_font"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:drawableTint="?attr/chk_primary_blue"
                    android:checked="true"/>
            </LinearLayout>

            <View style="@style/DividerStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_today"
                    app:tint="?attr/chk_balanceColor"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/radio_today"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Today"
                    android:fontFamily="@font/app_font"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:drawableTint="?attr/chk_primary_blue"/>
            </LinearLayout>

            <View style="@style/DividerStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_yesterday"
                    app:tint="#FF9800"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/radio_yesterday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Yesterday"
                    android:fontFamily="@font/app_font"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:drawableTint="?attr/chk_primary_blue"/>
            </LinearLayout>

            <View style="@style/DividerStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar_month"
                    app:tint="#9C27B0"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/radio_this_month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="This Month"
                    android:fontFamily="@font/app_font"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:drawableTint="?attr/chk_primary_blue"/>
            </LinearLayout>

            <View style="@style/DividerStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar_month"
                    app:tint="#607D8B"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/radio_last_month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Last Month"
                    android:fontFamily="@font/app_font"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:drawableTint="?attr/chk_primary_blue"/>
            </LinearLayout>

            <View style="@style/DividerStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_event"
                    app:tint="#E91E63"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/radio_single_day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Single Day"
                    android:fontFamily="@font/app_font"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:drawableTint="?attr/chk_primary_blue"/>
            </LinearLayout>

            <View style="@style/DividerStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_date_range"
                    app:tint="#FF5722"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/radio_date_range"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Custom Range"
                    android:fontFamily="@font/app_font"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:drawableTint="?attr/chk_primary_blue"/>
            </LinearLayout>

        </RadioGroup>
    </androidx.core.widget.NestedScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/chk_dividerHorizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:background="?attr/chk_surfaceColor">

        <Button
            android:id="@+id/btnCancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="?attr/chk_textColorSecondary"
            android:fontFamily="@font/app_font"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:backgroundTint="?attr/chk_primary_blue"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/app_font"
            android:textStyle="bold"
            app:cornerRadius="8dp"/>
    </LinearLayout>

</LinearLayout>