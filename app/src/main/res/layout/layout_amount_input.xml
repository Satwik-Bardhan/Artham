<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Amount"
        android:fontFamily="@font/app_font"
        android:textColor="?attr/chk_textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/amountInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:prefixText="â‚¹ "
            app:prefixTextColor="?attr/chk_textColorPrimary"
            app:hintEnabled="false"
            app:boxStrokeColor="?attr/chk_primary_blue"
            app:boxStrokeWidth="1dp"
            app:boxBackgroundColor="?attr/chk_surfaceColor"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/amountEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0.00"
                android:textColorHint="?attr/chk_textColorHint"
                android:inputType="numberDecimal"
                android:fontFamily="@font/app_font"
                android:textColor="?attr/chk_textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <FrameLayout
            android:id="@+id/calculatorButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_search_field"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_calculator"
                app:tint="?attr/chk_primary_blue"
                android:contentDescription="Calculator" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <include layout="@layout/layout_quick_amounts" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_category_chip"
        android:padding="4dp">

        <CheckBox
            android:id="@+id/taxCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Include Tax / GST"
            android:fontFamily="@font/app_font"
            android:textColor="?attr/chk_textColorPrimary"
            android:textSize="14sp"
            android:buttonTint="?attr/chk_primary_blue"
            android:layout_marginStart="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/taxAmountLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tax Rate (%)"
            android:visibility="gone"
            app:hintTextColor="?attr/chk_textColorSecondary"
            app:boxStrokeColor="?attr/chk_primary_blue"
            app:boxBackgroundColor="?attr/chk_surfaceColor"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/taxAmountEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="?attr/chk_textColorHint"
                android:inputType="numberDecimal"
                android:fontFamily="@font/app_font"
                android:textColor="?attr/chk_textColorPrimary"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

</LinearLayout>