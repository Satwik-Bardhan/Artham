<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/chk_backgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".TransactionDetailsActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="?attr/chk_headerColor"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/closeButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="?attr/chk_textColorPrimary" />

            <LinearLayout
                android:id="@+id/titleContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/menuButton"
                app:layout_constraintStart_toEndOf="@id/closeButton"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/app_font"
                    android:text="Entry Details"
                    android:textColor="?attr/chk_textColorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/headerSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/app_font"
                    android:text="View transaction info"
                    android:textColor="?attr/chk_textColorSecondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/menuButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Options"
                android:src="@drawable/ic_more_vert"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="?attr/chk_textColorPrimary" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footerLayout"
        android:layout_below="@id/headerCard"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="24dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/chk_surfaceColor"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="32dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/typeIcon"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:background="@drawable/bg_circle_soft"
                            android:contentDescription="Type"
                            android:padding="20dp"
                            android:src="@drawable/ic_minus"
                            app:tint="?attr/chk_expenseColor" />

                        <TextView
                            android:id="@+id/detailAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/app_font"
                            android:text="â‚¹ 0.00"
                            android:textColor="?attr/chk_expenseColor"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/detailType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_rounded_tag"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp"
                                android:text="OUT"
                                android:fontFamily="@font/app_font"
                                android:textColor="?attr/chk_textColorPrimary"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/detailDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:fontFamily="@font/app_font"
                                android:text="24 Nov 2025, 01:02 PM"
                                android:textColor="?attr/chk_textColorSecondary"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="24dp"
                        android:background="?attr/chk_dividerHorizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:fontFamily="@font/app_font"
                        android:textColor="?attr/chk_textColorSecondary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_category"
                            app:tint="?attr/chk_primary_blue"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/detailCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="General"
                            android:fontFamily="@font/app_font"
                            android:textColor="?attr/chk_textColorPrimary"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Mode"
                        android:fontFamily="@font/app_font"
                        android:textColor="?attr/chk_textColorSecondary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_payment"
                            app:tint="?attr/chk_primary_blue"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/detailPaymentMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cash"
                            android:fontFamily="@font/app_font"
                            android:textColor="?attr/chk_textColorPrimary"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/partySection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Party"
                            android:fontFamily="@font/app_font"
                            android:textColor="?attr/chk_textColorSecondary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginBottom="20dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_person"
                                app:tint="?attr/chk_primary_blue"
                                android:layout_marginEnd="16dp"/>

                            <TextView
                                android:id="@+id/detailParty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="John Doe"
                                android:fontFamily="@font/app_font"
                                android:textColor="?attr/chk_textColorPrimary"
                                android:textSize="16sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note"
                        android:fontFamily="@font/app_font"
                        android:textColor="?attr/chk_textColorSecondary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_notes"
                            app:tint="?attr/chk_primary_blue"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/detailRemark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No details provided"
                            android:fontFamily="@font/app_font"
                            android:textColor="?attr/chk_textColorPrimary"
                            android:textSize="16sp"
                            android:lineSpacingExtra="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tagsSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tags"
                            android:fontFamily="@font/app_font"
                            android:textColor="?attr/chk_textColorSecondary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginBottom="20dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_label"
                                app:tint="?attr/chk_primary_blue"
                                android:layout_marginEnd="16dp"/>

                            <TextView
                                android:id="@+id/detailTags"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Personal"
                                android:fontFamily="@font/app_font"
                                android:textColor="?attr/chk_textColorPrimary"
                                android:textSize="16sp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:alpha="0.8"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_cloud_check"
                        app:tint="?attr/chk_incomeColor" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/app_font"
                        android:text="Entry is backed up"
                        android:textColor="?attr/chk_textColorPrimary"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_security"
                        app:tint="?attr/chk_incomeColor" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/app_font"
                        android:text="100% Safe &amp; Secure"
                        android:textColor="?attr/chk_incomeColor"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?attr/chk_surfaceColor"
        android:elevation="16dp"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditTransaction"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:stateListAnimator="@null"
            android:text="Edit Entry"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/app_font"
            app:cornerRadius="8dp"
            app:elevation="0dp"
            app:icon="@drawable/ic_edit"
            app:iconGravity="textStart"
            android:backgroundTint="?attr/chk_primary_blue"
            android:textColor="@android:color/white"
            app:iconTint="@android:color/white"/>
    </LinearLayout>

</RelativeLayout>