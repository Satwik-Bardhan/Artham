<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="?attr/chk_surfaceColor"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/chk_dividerHorizontal"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_soft">

            <ImageView
                android:id="@+id/img_category_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_receipt_long"
                app:tint="?attr/chk_primary_blue"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/txt_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Groceries"
                android:fontFamily="@font/app_font"
                android:textColor="?attr/chk_textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Today, 10:30 AM"
                    android:fontFamily="@font/app_font"
                    android:textColor="?attr/chk_textColorSecondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_party_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text=" • Amazon"
                    android:fontFamily="@font/app_font"
                    android:textColor="?attr/chk_textColorSecondary"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/txt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="- ₹120.00"
                android:fontFamily="@font/app_font"
                android:textColor="?attr/chk_expenseColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_tag_small"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp">

                <ImageView
                    android:id="@+id/img_payment_mode"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_credit_card"
                    app:tint="?attr/chk_textColorSecondary"
                    android:layout_marginEnd="4dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txt_payment_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="CARD"
                    android:fontFamily="@font/app_font"
                    android:textColor="?attr/chk_textColorSecondary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>