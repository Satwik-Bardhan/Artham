<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/chk_dividerHorizontal" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="?attr/chk_primary_blue" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/chk_surfaceColor" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="?attr/chk_dividerHorizontal" />
        </shape>
    </item>
</selector>